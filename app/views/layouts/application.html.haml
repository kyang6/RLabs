!!! 5
%html
%head
	%title RLabs
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default{role: "navigation"}
		#tab
			.navbar-brand 
				= link_to "Research Labs", root_path
		.navbar-header
			%button.navbar-toggle{"data-target" => "#mobile-menu", "data-toggle" => "collapse", :type => "button"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
		
		#mobile-menu.collapse.navbar-collapse

			.container-fluid
				
				- if user_signed_in?
					%ul.nav.navbar-nav.navbar-right
						%li.nav= link_to "Sign Out", destroy_user_session_path, method: :delete
						%li.nav= link_to "My Profile", current_user
				- else
					%ul.nav.navbar-nav.navbar-right
						%li.nav= link_to "PI Sign In", new_user_session_path

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"
		= yield
	
	%footer
		%h5.footer Site developed by Kevin Yang and Meilin Zhu. 




