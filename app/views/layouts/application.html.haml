!!! 5
%html
%head
	%title RLabs
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand 
				= link_to "RLABS", root_path

			
			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li.nav= link_to "Sign Out", destroy_user_session_path, method: :delete
					%li.nav= link_to "My Lab", lab_path(current_user.id)
			- else
				%ul.nav.navbar-nav.navbar-right
					%li.nav= link_to "PI Sign In", new_user_session_path

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"
		= yield
	
	%footer
		%h5.footer Site developed by Kevin Yang and Meilin Zhu. 




